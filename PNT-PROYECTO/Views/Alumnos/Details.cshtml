@model PNT_PROYECTO.Models.Alumno



@{
    ViewData["Title"] = "Perfil";
}

<div class="container">
    <div class="row">
        <div class="col-5">
            <img src="~/mafalda2.jpg" class="mafaldaM">
        </div>
        <div class="col-7">
            @if (User.IsInRole("ALUMNO"))
            {
                <h1>Mis Datos</h1>
            }else
            {
                <h1>Perfil</h1>
            }
            <h4>Alumno</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-4">
                    Nombre y Apellido
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.NombreApellido)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Mail)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Mail)
                </dd>
            </dl>
            <div>
                @if (User.IsInRole("ADMIN"))
                {
                    <a asp-action="Edit" asp-route-id="@Model?.Legajo">Modificar</a>
                    <span>|</span>
                    <a asp-action="Index">Volver</a>
                }

            </div>
        </div>

    </div>


</div>

