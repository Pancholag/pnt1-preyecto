@model PNT_PROYECTO.Models.Profesor

@{
    ViewData["Title"] = "Perfil";
}

<h1>Perfil</h1>

<div class="container">
    <h4>Profesor</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Nombre y Apellido
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NombreApellido)
        </dd>
        <dt class="col-sm-2">
            Jerarquia
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Tipo)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Descripcion)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Descripcion)
        </dd>

        <dt class="col-sm-2">
            Fecha de ingreso
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FechaInicio)
        </dd>
        
        <dt class="col-sm-2">
            Contacto
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Mail)
        </dd>
    </dl>
</div>
<div>
    @if (User.IsInRole("ADMIN") || User.IsInRole("ADJUNTO") || User.IsInRole("ATPJTP"))
    {
        <a asp-action="Edit" asp-route-id="@Model?.Legajo">Modificar</a>
        <span>|</span>
    }
    <a asp-action="Index">Volver</a>
</div>
