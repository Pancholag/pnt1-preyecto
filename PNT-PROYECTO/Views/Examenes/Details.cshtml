@model PNT_PROYECTO.Models.Examen

@{
    ViewData["Title"] = "Detalles";
}

<h1>Examen</h1>

<div class="container">

    <h4>@Html.DisplayFor(model => model.Titulo)</h4>

    <p>Fecha: @Html.DisplayFor(model => model.Fecha)</p>


    <div class="my-4">
    <p>Materiales:</p>    
    @{
        foreach (Material m in Model.Materiales) {
            <a asp-controller="Materiales" asp-action="Details" asp-route-id="@m.Id">@m.Titulo</a>
        }
    }
    </div>
    <p><b>Autor: @Html.DisplayFor(model => model.Profe.NombreApellido)</b></p>

</div>
<div>
    @if (User.IsInRole("ADMIN") || User.IsInRole("ADJUNTO"))
    {
        <a asp-action="Edit" asp-route-id="@Model?.Id">Modificar</a> 
        <span>|</span>
    }
    <a asp-action="Index">Volver</a>
</div>
